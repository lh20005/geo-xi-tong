# GEO系统生产环境配置模板
# 部署时复制此文件到 /var/www/geo-system/server/.env 并修改敏感信息

NODE_ENV=production
PORT=3000

# 数据库配置 - 需要修改密码
DATABASE_URL=postgresql://geo_user:YOUR_DB_PASSWORD@localhost:5432/geo_system
DB_HOST=localhost
DB_PORT=5432
DB_NAME=geo_system
DB_USER=geo_user
DB_PASSWORD=YOUR_DB_PASSWORD

# JWT 配置 - 生产环境应使用新生成的密钥
JWT_SECRET=YOUR_JWT_SECRET_HERE
JWT_REFRESH_SECRET=YOUR_JWT_REFRESH_SECRET_HERE
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# 管理员账号 - 需要修改
ADMIN_USERNAME=admin
ADMIN_PASSWORD=YOUR_ADMIN_PASSWORD

# AI API 配置
DEEPSEEK_API_KEY=sk-your-deepseek-api-key
GEMINI_API_KEY=AIzaSy-your-gemini-api-key
OLLAMA_BASE_URL=http://localhost:11434

# WebSocket 配置
WEBSOCKET_PORT=8080

# CORS 配置 - 需要修改为实际服务器IP或域名
ALLOWED_ORIGINS=http://YOUR_SERVER_IP,http://localhost,http://localhost:5173,http://localhost:5174,http://localhost:8080

# 限流配置
LOGIN_RATE_LIMIT=5
LOGIN_RATE_WINDOW_MINUTES=15
REGISTRATION_RATE_LIMIT=3
REGISTRATION_RATE_WINDOW_HOURS=1

# ==================== 微信支付配置 ====================
WECHAT_PAY_APP_ID=YOUR_APP_ID
WECHAT_APP_SECRET=YOUR_APP_SECRET
WECHAT_PAY_MCH_ID=YOUR_MCH_ID
WECHAT_PAY_API_V3_KEY=YOUR_API_V3_KEY
WECHAT_PAY_SERIAL_NO=YOUR_SERIAL_NO
WECHAT_PAY_PRIVATE_KEY_PATH=/path/to/apiclient_key.pem
WECHAT_PAY_PUBLIC_KEY_PATH=/path/to/wechat_pay_public_key.pem
WECHAT_PAY_PUBLIC_KEY_ID=YOUR_PUBLIC_KEY_ID
WECHAT_PAY_NOTIFY_URL=https://your-domain.com/api/payment/wechat/notify
# ====================================================

API_KEY_ENCRYPTION_KEY=YOUR_ENCRYPTION_KEY

# ==================== 邮件服务配置 ====================
SMTP_HOST=smtp.163.com
SMTP_PORT=465
SMTP_USER=your-email@163.com
SMTP_PASS=YOUR_SMTP_PASSWORD
SMTP_FROM_NAME=GEO优化系统
# ====================================================
