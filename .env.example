# 数据库配置
DATABASE_URL=postgresql://user:password@localhost:5432/geo_system

# AI API配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Ollama配置（可选，用于本地AI模型）
# 如果使用本地Ollama，请确保Ollama服务已启动
# 默认地址: http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434

# 服务器配置
PORT=3000
NODE_ENV=development

# JWT密钥（生产环境请使用强密钥）
# 建议使用: openssl rand -base64 32 生成随机密钥
JWT_SECRET=your-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# WebSocket配置
WEBSOCKET_PORT=8080

# 默认管理员账号
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# 限流配置
# 登录限流：15分钟内最多5次失败尝试
LOGIN_RATE_LIMIT=5
LOGIN_RATE_WINDOW_MINUTES=15

# 注册限流：每小时最多3次注册
REGISTRATION_RATE_LIMIT=3
REGISTRATION_RATE_WINDOW_HOURS=1

# 生产环境配置（部署到腾讯云时使用）
# API_URL=https://your-domain.com/api
# WS_URL=wss://your-domain.com/ws
