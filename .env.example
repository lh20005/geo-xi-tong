# 数据库配置
DATABASE_URL=postgresql://user:password@localhost:5432/geo_system

# AI API配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Ollama配置（可选，用于本地AI模型）
# 如果使用本地Ollama，请确保Ollama服务已启动
# 默认地址: http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434

# 服务器配置
PORT=3000
NODE_ENV=development

# JWT密钥（生产环境请使用强密钥）
# 建议使用: openssl rand -base64 32 生成随机密钥
JWT_SECRET=your-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# WebSocket配置
WEBSOCKET_PORT=8080

# 默认管理员账号
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# 限流配置
# 登录限流：15分钟内最多5次失败尝试
LOGIN_RATE_LIMIT=5
LOGIN_RATE_WINDOW_MINUTES=15

# 注册限流：每小时最多3次注册
REGISTRATION_RATE_LIMIT=3
REGISTRATION_RATE_WINDOW_HOURS=1

# 生产环境配置（部署到腾讯云时使用）
# API_URL=https://your-domain.com/api
# WS_URL=wss://your-domain.com/ws

# ==================== 微信支付配置 ====================
# 重要：这些密钥必须保密，不能提交到代码仓库
# 获取方式：登录微信商户平台 https://pay.weixin.qq.com

# 微信公众号/小程序 AppID
WECHAT_PAY_APP_ID=wx1234567890abcdef

# 商户号（微信支付商户平台获取）
WECHAT_PAY_MCH_ID=1234567890

# API v3 密钥（32位字符串，在商户平台设置）
WECHAT_PAY_API_V3_KEY=your_32_character_api_v3_key_here

# 商户证书序列号（在商户平台下载证书后查看）
WECHAT_PAY_SERIAL_NO=1234567890ABCDEF1234567890ABCDEF12345678

# 商户私钥文件路径（apiclient_key.pem）
# 建议存储在服务器安全目录，权限设置为 600
WECHAT_PAY_PRIVATE_KEY_PATH=/path/to/certs/apiclient_key.pem

# 支付回调通知地址（必须是公网可访问的 HTTPS 地址）
WECHAT_PAY_NOTIFY_URL=https://yourdomain.com/api/payment/wechat/notify
