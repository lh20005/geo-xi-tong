/* index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #f0fff4 0%, #ffffff 100%);
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #07c160;
  border-radius: 50%;
}

.logo-icon {
  font-size: 80rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 80rpx;
}

.bind-btn {
  width: 80%;
  height: 96rpx;
  line-height: 96rpx;
  background: #07c160;
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  border: none;
  margin-bottom: 60rpx;
}

.bind-btn:active {
  background: #06ad56;
}

.tips {
  width: 100%;
  padding: 40rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 2;
}
