.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.icon {
  width: 120rpx;
  height: 120rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 24rpx;
}

.icon-text {
  font-size: 56rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.code-input-container {
  width: 100%;
  margin-bottom: 40rpx;
}

.code-input {
  width: 100%;
  height: 100rpx;
  background: white;
  border-radius: 16rpx;
  text-align: center;
  font-size: 48rpx;
  font-weight: 600;
  letter-spacing: 16rpx;
  color: #1890ff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: #07c160;
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  border: none;
  margin-bottom: 40rpx;
}

.submit-btn.disabled {
  background: #ccc;
}

.submit-btn:active:not(.disabled) {
  background: #06ad56;
}

.result {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.result-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  font-size: 40rpx;
  color: white;
}

.result-icon.success {
  background: #52c41a;
}

.result-icon.error {
  background: #ff4d4f;
}

.result-text {
  font-size: 28rpx;
  color: #333;
}

.tips {
  width: 100%;
  padding: 32rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tips-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 2;
}
