/* bindAgent.wxss - GEO 风格设计 */

/* 页面容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);
  padding-bottom: 40rpx;
}

/* 顶部装饰背景 */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 360rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  border-radius: 0 0 60rpx 60rpx;
}

/* 头部区域 */
.header {
  position: relative;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 60rpx;
  margin-bottom: 40rpx;
}

.logo {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 功能卡片 */
.card {
  position: relative;
  z-index: 10;
  width: calc(100% - 60rpx);
  margin: 0 30rpx;
  padding: 48rpx 40rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.icon-text {
  font-size: 40rpx;
  color: white;
}

/* 输入区域 */
.input-section {
  width: 100%;
}

.code-input {
  width: 100%;
  height: 100rpx;
  background: #f3f4f6;
  border-radius: 16rpx;
  text-align: center;
  font-size: 48rpx;
  font-weight: 600;
  letter-spacing: 16rpx;
  color: #3b82f6;
  margin-bottom: 32rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.code-input::placeholder {
  font-size: 28rpx;
  letter-spacing: 0;
  color: #9ca3af;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 44rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn.disabled {
  background: #d1d5db;
  box-shadow: none;
}

.submit-btn:active:not(.disabled) {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 加载状态卡片 */
.loading-card {
  padding: 60rpx 40rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #e5e7eb;
  border-top-color: #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #6b7280;
}

/* 结果状态卡片 */
.success-card, .error-card {
  padding: 48rpx 40rpx;
}

.result-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.result-icon.success {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
}

.result-icon.error {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
}

.result-icon .icon-text {
  font-size: 48rpx;
  color: white;
}

.result-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.result-desc {
  font-size: 28rpx;
  color: #6b7280;
  text-align: center;
  margin-bottom: 16rpx;
}

.result-hint {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 说明区域 */
.info-section {
  width: calc(100% - 60rpx);
  margin: 32rpx 30rpx 0;
  padding: 28rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.info-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 20rpx;
  padding-left: 8rpx;
  border-left: 6rpx solid #3b82f6;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.step-num {
  width: 36rpx;
  height: 36rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  color: white;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.step-text {
  font-size: 24rpx;
  color: #4b5563;
  line-height: 1.5;
  padding-top: 4rpx;
}

/* 底部版权 */
.footer {
  margin-top: auto;
  padding-top: 32rpx;
}

.footer-text {
  font-size: 22rpx;
  color: #9ca3af;
}
